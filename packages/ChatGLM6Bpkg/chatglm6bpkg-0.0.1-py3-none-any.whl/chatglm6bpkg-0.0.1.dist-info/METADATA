tokenizer, config, model = ChatGLM6Bpkg.ptuning.load_ptuning_checkpoint(
        model_name_or_path="THUDM/chatglm-6b",
        ptuning_checkpoint="./output/adgen-chatglm-6b-pt-128-2e-2/checkpoint-100",
        pre_seq_len=128,
        quantization_bit=4
    )
